
implode = (a,sep) ->
  r='';
  for a
    r+=s+sep

mgvg = (r) ->
  keys=['foo', 'buzz', 'bar']
  $ = implode keys, ' xargs -d "\\n" ag -l | '
  cmd='ag -l'+$
  # ag -l foo | xargs -d "\n" ag -l bar | xargs -d "\n" ag -l buzz |

  for keys
    cmd+='ag+$+'|''
  # ag foo | ag bar | ag buzz

  cmd+='xargs -d "\\n" grep ^'

  cmd+='ag '
  $ = implode '|', keys
  cmd+=$
  echo cmd
  exec cmd
    loop
      echo

mgvg()
